{% extends 'base.html.twig' %}

{% block title %}Tableau de bord Admin{% endblock %}

{% block body %}
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }
        main {
            padding: 2rem;
            text-align: center;
        }
        .dashboard-container {
            max-width: 800px;
            margin: 2rem auto;
            padding: 2rem;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }
        .dashboard-container h1 {
            margin-bottom: 1.5rem;
        }
        .dashboard-container ul {
            list-style: none;
            padding: 0;
        }
        .dashboard-container ul li {
            margin-bottom: 1rem;
        }
        .dashboard-container ul li a {
            color: #333;
            text-decoration: none;
            font-weight: bold;
        }
        .dashboard-container ul li a:hover {
            text-decoration: underline;
        }
    </style>

    {% include 'partials/header.html.twig' %}
    <main>
        <div class="dashboard-container">
            <h1>Tableau de bord Admin</h1>
            <ul>
                <li><a href="{{ path('menu_index') }}">Gérer les menus</a></li>
                <li><a href="{{ path('reservation_index') }}">Gérer les réservations</a></li>
                <li><a href="{{ path('restaurant_index') }}">Gérer les restaurants</a></li>
                <li><a href="{{ path('table_index') }}">Gérer les tables</a></li>
            </ul>
        </div>
    </main>
    {% include 'partials/footer.html.twig' %}
{% endblock %}