{% extends 'base.html.twig' %}

{% block title %}Modifier Restaurant{% endblock %}

{% block body %}
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }
        main {
            padding: 2rem;
            text-align: center;
        }
        .form-container {
            max-width: 600px;
            margin: 2rem auto;
            padding: 2rem;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }
        .form-container h1 {
            margin-bottom: 1.5rem;
        }
        .form-container label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: bold;
        }
        .form-container input, .form-container textarea, .form-container select {
            width: 100%;
            padding: 0.5rem;
            margin-bottom: 1rem;
            border: 1px solid #ccc;
            border-radius: 4px;
        }
        .form-container button {
            padding: 0.75rem 1.5rem;
            background-color: #28a745;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }
        .form-container button:hover {
            background-color: #218838;
        }
        .btn-info {
            background-color: #17a2b8;
            color: #fff;
            text-decoration: none;
            padding: 0.5rem 1rem;
            border-radius: 4px;
            display: inline-block;
            margin-top: 1rem;
        }
        .btn-info:hover {
            background-color: #138496;
        }
    </style>

    {% include 'partials/header.html.twig' %}
    <main>
        <div class="form-container">
            <h1>Modifier Restaurant</h1>

            {{ include('restaurant/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

            <a href="{{ path('restaurant_index') }}" class="btn-info">Retour à la liste</a>

            {{ include('restaurant/_delete_form.html.twig', { 'restaurant': restaurant }) }}
        </div>
    </main>
    {% include 'partials/footer.html.twig' %}
{% endblock %}